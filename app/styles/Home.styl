@require "variables"

triangle-height = 12vw
triangle-width = 50vw

.home

  .header
    background url('assets/img/main-hero.png') no-repeat center center fixed
    background-size cover
    height 720px
    width 100%
    position relative
    display flex
    justify-content center
    align-items center

    .header-content
      color white
    
    .headline
      font-size 3.2em
      font-weight 300
      position relative
      overflow hidden
      text-align center
      
      @media(max-width 480px)
        font-size 2.2em
      
      .headline-break
        display block
        
        @media(max-width 768px)
          display none
    
    .headline-blurb
      font-size 1.5em
      font-weight 100
      text-align center
      
      @media(max-width 480px)
        font-size 1.2em
    
    .headline-input
      background transparent
      border-color accent-one
      color white
      height 50px
      
    .triangle-left
      width 0
      height 0
      border-style solid
      border-width triangle-height 0 0 triangle-width
      border-color transparent transparent transparent white
      position absolute
      bottom 0
      left 0
    
    .triangle-right
      width 0
      height 0
      border-style solid
      border-width 0 0 triangle-height triangle-width
      border-color transparent transparent white transparent
      position absolute
      bottom 0
      right 0

  .problems
    background-color white
    width 100%
    padding 100px 0 50px
    
    .problem-headline
      color accent-one
      font-size 2.8em
      font-weight 500
      margin-bottom 25px
      
      @media(max-width 768px)
        text-align center
    
    .problem-icon
      text-align center
      margin-bottom 12px
    
    .problem-item-title
      font-size 1.2em
      font-weight 500
      text-align center
      margin-bottom 12px
    
    .problem-item-desc
      font-weight 300
      margin-bottom 50px
      text-align center
      
      @media(max-width 768px)
        text-align center

  .app-showcase
    background-color primary
    color white
    padding-top 50px
    position relative
    z-index -1
    
    .white-bar
      position absolute
      bottom 0
      left 0
      right 0
      width 100%
      height 50px
      background-color white
      z-index -1
    
    .app-img
      margin-left auto
      margin-right auto  
      max-width 90%
      height auto
      display block
      z-index 1

  .notepad-showcase
    overflow overlay
    padding-top 50px
    padding-bottom 50px
    position relative
    
    .punchline
      text-align center
      font-size 24px
      font-weight 100
      margin-bottom 50px
      
    .notepad-details-container
      width 100%
      max-width 1140px
      display flex
      flex-direction row
      justify-content space-between
      margin auto
      
      @media (max-width 768px)
        flex-direction column
        justify-content space-around
    
    .notepad-img img
      margin auto

    .notepad-img,
    .notepad-desc
      margin-right auto
      margin-left auto
      width 45%
      height auto
    
      @media (max-width 768px)
        width 90%
      
    .notepad-text
      font-size 18px
      font-weight 100
      margin-bottom 80px
      h2
        font-size 30px
        font-weight 300

  .section-title
    text-align center
    font-size 48px
    font-weight 300
    margin-bottom 25px

  .section-explanation
    text-align center
    font-size 18px
    font-weight 100
    margin-bottom 50px
      
  .cta
    height 502px
    background url('assets/img/main-bottom.png') no-repeat center center
    background-size cover
    color white
    display flex
    flex-direction column
    justify-content center
    align-items center
    
    & > div
      width 100%
    
    .section-title
      margin-bottom 25px
      
      @media (max-width 480px)
        font-size 10vw
    
    .cta-input
      background transparent
      border-color accent-two
      color white
      height 50px